index 21f0fed..532f15a 100644
--- a/src/qemu_driver.c
+++ b/src/qemu_driver.c
@@ -1408,7 +1408,7 @@ qemudMonitorCommand (const struct qemud_driver *driver ATTRIBUTE_UNUSED,
 static const char *qemudProbe(void)
 {
     if ((virFileExists("/usr/bin/qemu")) ||
-        (virFileExists("/usr/bin/qemu-kvm")) ||
+        (virFileExists("/usr/bin/kvm")) ||
 	(virFileExists("/usr/bin/xenner"))) {
         if (getuid() == 0) {
 	    return("qemu:///system");
